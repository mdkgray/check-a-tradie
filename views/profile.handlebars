<div class="container d-flex p-2 mt-5 justify-content-center text-center">
  <div class="card col-8 border border-4 rounded bg-light text-dark">
    <div class="card-header bg-secondary text-white">
      <h3>{{user.businessName}}</h3>
    </div>
    <div class="card-body">
      <h6 class="card-subtitle mb-2 text-muted">License: {{user.licenseNumber}}</h6>
      <br>
      <p class="card-text">{{user.bio}}</p>
      <p class="card-text">Contact Number: <a href="#" class="card-link">{{user.phoneNumber}}</a></p>
      <p class="card-text">Email: <a href="#" class="card-link">{{user.email}}</a></p>  
      <br>
      <div class="container col-6 card text-center">
        <div class="card-header "><h5>Business Specialities</h5></div>
        <div class="card-body">
          <p class="card-text">{{user.specialities}}.</p>
        </div>        
      </div>    
    </div>    
  </div>
</div>
<script src="/js/profile.js"></script>