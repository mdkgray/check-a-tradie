<!--business details input form-->
<form id="form-group">
  <div class="d-flex flex-wrap justify-content-evenly">
    <div class="col-4">
      <div class="form-group">
        <label for="exampleFormControlInput1">Business Name</label>
        <input type="email" class="form-control" id="name-signup" placeholder="Business Name">
      </div>

      <div class="form-group">
          <label for="formGroupExampleInput">Certification License Number</label>
          <input type="text" class="form-control" id="license-number" placeholder="123456A">
      </div>

      <div class="form-group">
        <label for="exampleFormControlTextarea1">About the business</label>
        <textarea class="form-control" id="about-listing" rows="3"></textarea>
      </div>

      <div class="form-group">
          <label for="formGroupExampleInput">Email</label>
          <input type="text" class="form-control" id="email-signup" placeholder="name@example.com">
      </div>

      <div class="form-group">
          <label for="formGroupExampleInput">Contact Number</label>
          <input type="text" class="form-control" id="phone-number">
      </div>
      <br>
      <a href="#" class="btn btn-primary" type="submit" id="saveButton">Save</a>
  </div>

  <!--specialties text box -->
  <div class="d-flex flex-wrap justify-content-evenly col-6">
    <div class="card col-6">
      <div class="card-body">
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Specialties:</label>
          <textarea class="form-control" id="special-tasks"></textarea>
        </div>
      </div>
    </div>
  </div>
</form>
<script src="/js/dashboard.js"></script>