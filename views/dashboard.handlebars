<!--business details input form-->
<form id="form-group">
  <div class="container d-flex col-sm-10 flex-wrap justify-content-evenly">
    <div class="col-4 border border-4 rounded bg-light text-dark p-2 mt-5">
      <div class="form-group">
        <label for="exampleFormControlInput1">Business Name</label>
        <input type="text" class="form-control" id="name-signup" placeholder="Business Name" value="{{user.businessName}}">
      </div>

      <div class="form-group">
          <label for="formGroupExampleInput">Certification License Number</label>
          <input type="text" class="form-control" id="license-number" placeholder="123456A" value="{{user.licenseNumber}}">
      </div>

      <div class="form-group">
        <label for="exampleFormControlTextarea1">About the business</label>
        <input class="form-control" id="about-listing" rows="3" value="{{user.bio}}">
      </div>

      <div class="form-group">
          <label for="formGroupExampleInput">Email</label>
          <input type="email" class="form-control" id="email-signup" placeholder="name@example.com" value="{{user.email}}">
      </div>

      <div class="form-group">
          <label for="formGroupExampleInput">Contact Number</label>
          <input type="text" class="form-control" id="phone-number" value="{{user.phoneNumber}}">
      </div>
      <br>
      <button class="btn btn-primary" type="submit" id="saveButton">Save</button>
  </div>

  <!--specialities text box -->
  <div class="d-flex flex-wrap justify-content-evenly col-sm-6">
    <div class="card col-6 border border-4 rounded bg-light text-dark p-2 mt-5">
      <div class="card-body">
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Specialities</label>
          <input class="form-control" id="special-tasks" value="{{user.specialities}}">
        </div>
      </div>
    </div>
  </div>
</form>
<script src="/js/dashboard.js"></script>